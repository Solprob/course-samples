<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="action_subject_calendar_request" model="ir.actions.act_window">
            <field name="name">Calendario Examenes</field>
            <field name="res_model">subject.calendar</field>
            <field name="view_mode">calendar,tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create"> Click to Create a New Record.</p>
            </field>
        </record>

        <record id="subject_calendar_view" model="ir.ui.view">
            <field name="name">subject.calendar.view</field>
            <field name="model">subject.calendar</field>
            <field name="arch" type="xml">
                <calendar
                        date_start="date_start"
                        date_stop="date_stop"
                        mode="month"
                        quick_create="0"
                        color="subject_generic_id"
                        event_open_popup="True"
                >
                    <field name="name"/>
                    <field name="subject_generic_id" />
                </calendar>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="subject_calendar_menu"
                  name="Calendario Examenes"
                  parent="sample_students_menu_root"
                  action="action_subject_calendar_request"
                  sequence="40"/>

    </data>
</odoo>